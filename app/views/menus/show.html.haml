%p.notice
= notice
.main_content
	#recipe_top.row
		.col-md-4
			= image_tag @menu.picture.url(:medium), class: "recipe_image"
		.col-md-8
			#recipe_info
				%h2= @menu.name 
				%span.label.label-default= @menu.price.to_s + "GHc"
				%p.description= @menu.description
				%h3= @menu.category
- if user_signed_in?
	.row
		.col-md-12
			= link_to "Back", root_path, class: "btn btn-default"
			= link_to "Edit", edit_menu_path, class: "btn btn-default"
			= link_to "Delete", menus_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" 

